<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/item_alter_data_top"></include>

    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

    <TextView
        android:layout_width="95dp"
        android:gravity="center_vertical"
        android:text="生成的志愿表"
        android:background="#12BBC3"
        android:layout_marginLeft="10dp"
        android:paddingLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:layout_height="35dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#EEEEEE"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="#21CE8E"
        android:gravity="center"
        android:layout_height="35dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="整体合理性"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="非常好,"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="查看完整的报告>>"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="35dp">
        <TextView
        android:id="@+id/achievement"
        android:layout_width="wrap_content"
        android:gravity="center"

        android:layout_marginLeft="10dp"
            android:textSize="13sp"
        android:text="成绩："
        android:layout_height="match_parent" />
        <TextView
            android:id="@+id/achievement_city"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@+id/achievement"
            android:textSize="13sp"
            android:text="江苏"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/shcool_wlk"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/achievement_city"
            android:text="理科"
            android:textSize="13sp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/achievement_score"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/shcool_wlk"
            android:text="500分"
            android:textSize="13sp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/shcool_time"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/school_time1"
            android:text="更新"
            android:textSize="13sp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/school_time1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="2019-1-2"
            android:textSize="13sp"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="40dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:text="我爱你我爱你我爱你我爱你....."
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/arrow_right"
            android:background="@color/white"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/shcool_remarks"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingLeft="10sp"
        android:text="备注："
        android:textSize="13sp"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:background="#E3E3E3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:text="本科第一批" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:text="(已填志愿0/6)" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/corner"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="50dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:background="@drawable/ic_bookmark_24dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="A"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/school_name_s"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="清华大学"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp"

                        android:text="服从调剂"
                        android:layout_marginBottom="5dp"
                        android:textSize="13sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/school_form_city"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="北京市"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/minimum_score"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="16年最低分419(A+A)"
                        android:textSize="13sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_margin="5dp"
                        />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:background="@drawable/border_yellow"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="录取率"
                        android:textSize="10sp" />
                    <TextView
                        android:id="@+id/item_schoolenrollratio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF8000"
                        android:textSize="10sp"
                        android:text=">10%"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:background="@color/colorAccent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/bootpage"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/schoolvolunteer1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="13sp"
                    android:text="1、法学"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <TextView
                    android:id="@+id/schoolvolunteer3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_margin="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="3、法学"
                    />
                <TextView
                    android:id="@+id/schoolvolunteer5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5、法学"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="13sp"
                    android:layout_margin="5dp"
                    />





            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/schoolvolunteer2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="2、法学"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="13sp"
                    />
                <TextView
                    android:id="@+id/schoolvolunteer4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="4、法学"
                    />
                <TextView
                    android:id="@+id/schoolvolunteer6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6、法学"
                    android:layout_margin="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="13sp"
                    />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="#545454"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:text="特别说明"
        android:background="@color/white"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:textColor="#757575"
        android:paddingLeft="10dp"
        android:text="1、所报大学尽可能从推荐的院校中选择"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:background="@color/white"
        android:textColor="#757575"
        android:text="2、一般情况下、热门大学、热门城市、热门专业容易扎堆填报，请慎重"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:textColor="#757575"
        android:text="3、注意查看大学的招生章程，了解录取情况及其规则后(注意加分认可情况，单科成绩要求。身体条件等)。
"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:text="4、至尊会员务必请按照服务规则设计填报。"
        android:textColor="#757575"
        />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
