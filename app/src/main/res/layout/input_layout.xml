<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/textview2_style"
    android:orientation="vertical" >
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/mall_font_999999"  />
    <LinearLayout
        style="@style/textview2_style"
        android:layout_margin="20dip"
        android:background="@drawable/radius_drawable_bg"
        android:orientation="vertical"
        android:padding="10dip" >

        <LinearLayout
            android:id="@+id/input_layout_name"
            style="@style/textview2_style"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                style="@style/textview1_style"
                android:src="@mipmap/tel" />

            <EditText
                android:id="@+id/name_tel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="#00000000"
                android:hint="手机号"
                android:padding="5dip"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@color/hongse" />

        <LinearLayout
            android:id="@+id/input_layout_psw"
            style="@style/textview2_style"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                style="@style/textview1_style"
                android:src="@mipmap/pwd" />

            <EditText
                android:id="@+id/pwd"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="#00000000"
                android:hint="密码"
                android:inputType="textPassword"
                android:padding="5dip"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:background="@color/mall_font_999999"  />
</LinearLayout>
