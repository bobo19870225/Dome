<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/textview2_style"
    android:orientation="vertical"
    android:background="@color/bg"
>
    <LinearLayout
        android:layout_below="@+id/layout"
        style="@style/textview2_style"
        android:orientation="vertical"
        android:background="@color/bg"
>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/border_fragment_home"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
 >

                <ImageView
                    android:id="@+id/list_image"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:scaleType="fitXY"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/fd" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/school_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="北京大学"
                        android:textSize="@dimen/siez_dime6"
                        android:textColor="@color/font_heise"
                        />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"

                    android:orientation="horizontal"
                    android:layout_height="0dp">
                    <TextView
                        android:id="@+id/school_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:text="标题"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_height="30dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/browse"
                        />
                <TextView
                    android:id="@+id/school_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="时间"
                    android:textSize="@dimen/siez_dime2"
                    />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/position"
                        />
                    <TextView
                        android:id="@+id/school_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:maxEms="7"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:text="北京"
                        android:textSize="@dimen/siez_dime2"
                        />
                    </LinearLayout>
                </LinearLayout>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
