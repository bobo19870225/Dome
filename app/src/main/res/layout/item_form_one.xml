<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="170dp">
        <TextView
            android:id="@+id/form_school_lqv"
            android:layout_width="wrap_content"
            android:text="45%"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:textColor="#D74964"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/form_school_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:text="贵州大学"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/form_school_wlk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="11sp"
                    android:text="理工"
                    />
                <TextView
                    android:id="@+id/form_school_city"
                    android:layout_width="wrap_content"
                    android:textSize="11sp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="贵阳市"
                    />
                <TextView
                    android:id="@+id/form_school_pm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="11sp"
                    android:layout_marginLeft="10dp"
                    android:text="排名"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="11sp"
                    android:text="2019招生计划："
                    />

                <TextView
                    android:id="@+id/form_school_zsrs"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="20"
                    android:textSize="11sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="2019最低分："
                    android:textSize="11sp"
                    />
                <TextView
                    android:id="@+id/form_school_score"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="11sp"
                    android:text="20"
                    />
                <TextView
                    android:id="@+id/form_school_lqrs"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:text="录取人数：18"
                    android:textSize="11sp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/schoolvolunteer1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="10sp"

                        android:maxLines="1"
                        android:ellipsize="end"
                        />
                    <TextView
                        android:id="@+id/schoolvolunteer3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:layout_margin="5dp"
                        android:maxLines="1"
                        android:ellipsize="end"

                        />
                    <TextView
                        android:id="@+id/schoolvolunteer5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="10sp"
                        android:layout_margin="5dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/schoolvolunteer2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"

                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="10sp"
                        />
                    <TextView
                        android:id="@+id/schoolvolunteer4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="10sp"
                        android:maxLines="1"
                        android:ellipsize="end"

                        />
                    <TextView
                        android:id="@+id/schoolvolunteer6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_margin="5dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="10sp"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/iv_fun"
        android:layout_width="70dp"
        android:layout_height="170dp"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/white"
        android:background="@color/hongse"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:layout_marginRight="5dp"
        />
</RelativeLayout>
