<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#757575"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include layout="@layout/item_alter_data_top"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="55dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/pent_view"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/search_view_background"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sousuo"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/homepage_fragment_search_views"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/search_view_background"
                android:gravity="center_vertical"
                android:hint="请输入查询的院校"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp" />
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/submission_bnt"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/border_sign_back"
                android:gravity="center"
                android:text="火眼金睛"
                android:textColor="#ffffff"
                android:textSize="17sp" />
            </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/query_results"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="17sp" />
    </LinearLayout>


</LinearLayout>
