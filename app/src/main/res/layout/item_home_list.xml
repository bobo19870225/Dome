<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/home_image"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@mipmap/cs_tx"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/home_title"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textColor="#000000"
                    android:paddingLeft="8dp"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:text="企业名称"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/text_home"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="2dp"
                        android:gravity="center_vertical"
                        android:text="时间:"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/home_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_toEndOf="@+id/text_home"
                        android:layout_toRightOf="@+id/text_home"
                        android:gravity="center_vertical"
                        android:text="2017-11-27"
                        android:textSize="11sp" />

                    <ImageView
                        android:id="@+id/fx"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="9dp"
                        android:layout_toRightOf="@+id/home_time"
                        android:paddingTop="7dp"
                        android:src="@mipmap/browse" />



                    <TextView
                        android:id="@+id/dianzan"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/fx"
                        android:gravity="center_vertical"
                        android:text="999"
                        android:textSize="11sp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/redian"
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:gravity="bottom|center"
                            android:background="@drawable/border_red"
                            android:layout_marginRight="10dp"
                            android:padding="2dp"
                            android:textSize="12sp"
                            android:text="热点"
                            android:textColor="@color/hongse"
                            />
                    </LinearLayout>

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
</LinearLayout>
