<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:background="@drawable/shape"
        android:layout_height="30dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape"
        >
        <LinearLayout
            android:id="@+id/fanhui_lay"
            android:layout_width="80dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fanhui_my"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/fanhui" />
        </LinearLayout>
        <TextView
            android:id="@+id/top_lift"
            style="@style/textview1_style"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/fanhui_lay"
            android:textSize="13dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/top"
            style="@style/textview1_style"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/top_right_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16sp"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/my_lay3"
        style="@style/textview2_style"
        android:orientation="vertical"
        >

        <com.yy.dome.widget.PreferenceItem
            android:id="@+id/form_batch1"
            style="@style/textview2_style"/>
        <com.yy.dome.widget.PreferenceItem
            android:id="@+id/form_batch2"
            style="@style/textview2_style"/>
    </LinearLayout>

</LinearLayout>
