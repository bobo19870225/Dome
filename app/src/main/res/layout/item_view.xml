<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:orientation="vertical"
    android:id="@+id/lv"
    android:gravity="center"
    android:padding="10dp"

    android:layout_margin="10dp"
    android:background="@drawable/text_sign_setting_style"
    android:layout_height="wrap_content">
    <com.yy.dome.widget.ZQRoundOvalImageView
        android:id="@+id/item_gridview_image"
        android:layout_width="41dp"
        android:layout_height="48dp"
        android:scaleType="fitXY"
        android:src="@mipmap/school_log" />
    <TextView
        android:id="@+id/item_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textSize="13sp"
        android:text="上海市"
        />
    <TextView
        android:id="@+id/item_gridview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/font_heise"
        android:text="北京交通大学"
        />
</LinearLayout>
